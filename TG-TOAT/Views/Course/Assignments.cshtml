@model TGTOAT.Models.CourseHome

@{
    ViewData["Title"] = "Assignments";

    if (Model.UserRole == "Student")
    {
        Layout = "~/Views/Shared/_StudentCourse.cshtml";
    }
    else if (Model.UserRole == "Instructor")
    {
        Layout = "~/Views/Shared/_InstructorCourse.cshtml";
    }
}

<h1 class="h1-course">@Model.Department @Model.CourseNum - Assignments</h1>

<div class="course-row">
    <div class="course-nav">
        <a class="nav-link" asp-area="" asp-controller="Course" asp-action="Index" asp-route-id="@Model.CourseId">Home</a>
        <a class="nav-link" asp-area="" asp-controller="Course" asp-action="Announcements" asp-route-id="@Model.CourseId">Announcements</a>
        <a class="nav-link course-curr" asp-area="" asp-controller="Course" asp-action="Assignments" asp-route-id="@Model.CourseId">Assignments</a>
        <a class="nav-link" asp-area="" asp-controller="Course" asp-action="Grades" asp-route-id="@Model.CourseId">Grades</a>
    </div>

    <div class="row assignmentList">
        @if (Model.UserRole == "Student")
        {
            @foreach (var assignment in Model.Assignments)
            {
                <div class="row" style="align-items: center;">
                    <div class="col-md-6 text-left">
                        @assignment.AssignmentName - Due: @assignment.DueDateAndTime.ToString("MM/dd/yyyy hh:mm tt")
                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-primary" asp-area="" asp-controller="Course" asp-action="SubmitAssignment" asp-route-assignmentId="@assignment.AssignmentId">
                            Submit
                        </a>
                    </div>
                </div>
            }
        }
        else if (Model.UserRole == "Instructor")
        {
            <a asp-area="" asp-controller="Course" asp-route-id="@Model.CourseId" asp-action="AddAssignment" class="btn btn-success">Add Assignment</a>

            @foreach (var assignment in Model.Assignments)
            {
                <div class="row" style="align-items: center;">
                    <div class="col-md-6 text-left">
                        <strong>@assignment.AssignmentName</strong> - Due: @assignment.DueDateAndTime.ToString("MM/dd/yyyy hh:mm tt")
                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-primary" asp-area="" asp-controller="Course" asp-action="ViewSubmissions" asp-route-assignmentId="@assignment.AssignmentId">
                            View Submissions
                        </a>
                    </div>
                </div>
            }
        }
    </div>

    
