@* @model IEnumerable<TGTOAT.Data.Courses> *@
@model TGTOAT.ViewModels.CourseListViewModel


@{
    ViewData["Title"] = "Courses";

    if (Model.UserLoginViewModel.UserRole == "Student")
    {
        Layout = "~/Views/Shared/_StudentLayout.cshtml";
    }
    else if (Model.UserLoginViewModel.UserRole == "Instructor")
    {
        Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    }
}

@{
    ViewData["Title"] = "Courses";
}

<h1>Course List</h1>
<a href="@Url.Action("AddCourse", "Course")" class="btn btn-primary">Add New Course</a>

<table class="table">
    <thead>
        <tr>
            <th>Course Number</th>
            <th>Course Name</th>
            <th>Department</th>
            <th>Credits</th>
            <th>Location</th>
            <th>Room Number</th>
            <th>Days</th>
            <th>Start Time</th>
            <th>End Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.CourseNumber</td>
                <td>@course.CourseName</td>
                <td>@course.Department.DepartmentName</td>
                <td>@course.NumberOfCredits</td>
                <td>@course.Location</td>
                <td>@course.RoomNumber</td>
                <td>@course.DaysOfTheWeek</td>
                @* <td>@course.StartTime</td>
                <td>@course.EndTime</td> *@
                <td>@course.StartTime?.ToString("hh:mm tt")</td>  <!-- Displaying time only -->
                <td>@course.EndTime?.ToString("hh:mm tt")</td>    <!-- Displaying time only -->
                <td>
                    <!-- Action buttons (Edit and Delete) -->
                    <a href="#" class="btn btn-primary">Edit</a>  <!-- Edit button -->
                    <a href="#" class="btn btn-danger">Delete</a> <!-- Delete button -->
                </td>
            </tr>
        }
    </tbody>
</table>
