@model IEnumerable<TGTOAT.Data.Courses>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>


<a asp-action="AddCourse" class="btn btn-primary">Add Course</a>


<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4">
            <div class="card" style="width: 20rem; height :auto">
                <div class="card-body">
                    <h5 class="card-title">@course.CourseName</h5>
                    <p class="card-text">Course Number: @course.CourseNumber</p>
                    <p class="card-text">Department: @course.Department.DepartmentName</p>
                    <p class="card-text">Location: @course.Location</p>
                    <p class="card-text">RoomNumber: @course.RoomNumber</p>
                    <p class="card-text">Days: @course.DaysOfTheWeek</p>
                    <p class="card-text">Time: @course.StartTime - @course.EndTime</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>