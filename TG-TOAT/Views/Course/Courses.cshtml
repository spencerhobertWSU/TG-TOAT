@model CourseListViewModel


@{
    ViewData["Title"] = "Courses";

    Layout = "~/Views/Shared/_InstructorCourse.cshtml";
}

<div class="tableHor">
    <h1>Course List</h1>
    <div class="course-btn">
        <a href="@Url.Action("Create", "Course")" class="btn btn-primary">Add New Course</a>
    </div>
</div>



<table class="table course-table">
    <thead>
        <tr>
            <th class="tDept">Department</th>
            <th class="tCNum">Course Number</th>
            <th class="tName">Course Name</th>
            <th class="tCred">Credits</th>
            <th class="tCamp">Campus</th>
            <th class="tBldg">Building</th>
            <th class="tRNum">Room Number</th>
            <th class="tDays">Days</th>
            <!--<th class="tSTim">Start Time</th>-->
            <!--<th class="tETim">End Time</th>-->

            <th class="tSeme">Semester</th>
            <th class="tYear">Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Courses.Count != 0)
        {
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td class="tDept">@course.DeptName</td>
                    <td class="tNum">@course.CourseNumber</td>
                    <td>@course.CourseName</td>
                    <td>@course.NumberOfCredits</td>
                    <td>@course.Campus</td>
                    <td>@course.Building</td>
                    @{
                        if (course.Room == 0)
                        {
                            <td>Onl</td>
                        }
                        else
                        {
                            <td>@course.Room</td>
                        }
                    }

                    <td>@course.DaysOfTheWeek</td>
                    @* <td>@course.StartTime</td>
            <td>@course.EndTime</td> *@
                    <!--<td>*@course.StartTime?.ToString("hh:mm tt")</td>   Displaying time only -->
                    <!--<td>@course.EndTime?.ToString("hh:mm tt")</td>     Displaying time only -->

                    <td>@course.Semester</td>
                    <td>@course.Year</td>


                    <td>
                        <a href="@Url.Action("Edit", "Course", new { id = course.CourseId })" class="btn btn-primary">Edit</a>  <!-- Edit button -->
                        <a href="@Url.Action("Delete", "Course", new { id = course.CourseId })" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this course?');">Delete</a>                 <!-- Delete button-->

                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <p>You haven't created any classes</p>
            </tr>
        }

    </tbody>
</table>
