@model SubmissionDetailViewModel

@{
    ViewData["Title"] = "Submission";
    Layout = "~/Views/Shared/_InstructorCourse.cshtml";
}


<h1>Submission</h1>

<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Due Date</th>
            <th>Submission Date</th>
            <th>Max Points</th>
            <th>Given Points</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.StudentFullName</td>
                <td>@Model.DueDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                <td>@Model.SubmissionDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                <td id="maxPoints">@Model.MaxPoints</td>
                <td>
                    <form asp-action="UpdateSubmission" method="post" style="display:inline;">
                        <input type="hidden" name="assignmentId" value="@Model.AssignmentId" />
                        <input type="hidden" name="studentId" value="@Model.StudentId" />
                        <input type="text" name="givenPoints" value="@Model.GivenPoints" style="width:60px;" />
                        <button type="submit" class="btn btn-success">Update</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div class="submission-details">
                        <h4>Submission Content</h4>
                        @if (!string.IsNullOrEmpty(Model.TextSubmission))
                        {
                            <div>
                                <h5>Text Submission:</h5>
                                <p>@Model.TextSubmission</p>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(Model.FileSubmission))
                        {
                            <div>
                                <h5>File Submission:</h5>
                                <a href="@Url.Content(Model.FileSubmission)" class="btn btn-primary" download>Download File</a>
                            </div>
                        }
                        else
                        {
                            <p>No submission content available.</p>
                        }
                    </div>
                </td>
            </tr>
  
    </tbody>
</table>
