@model TGTOAT.Models.UserLoginViewModel
@section Scripts {
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css' rel='stylesheet' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js'></script>
}
@{
    ViewData["Title"] = "Home";

    if (Model.UserRole == "Student")
    {
        Layout = "~/Views/Shared/_StudentLayout.cshtml";
    }
    else if (Model.UserRole == "Instructor")
    {
        Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    }
}

<div id='calendar'></div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        // Example "To Do" list items with only date
        var todoList = [
            { title: 'Quiz 3: Foundations', date: '2024-09-18' },
            { title: 'Exam 1: Foundations', date: '2024-09-20' },
            { title: 'Code 4: Java For loops', date: '2024-09-27' },
            { title: 'Code 5: Java Switches', date: '2024-09-27' },
            { title: 'Code 6: Java While loops', date: '2024-09-29' }
        ];
        // Convert "To Do" list items to FullCalendar event objects
        var calendarEvents = todoList.map(function (item) {
            return {
                title: item.title,
                start: item.date,
                allDay: true // Specify that this is an all-day event
            };
        });
        // Initialize FullCalendar with events
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: calendarEvents // Add events to calendar here
        });
        calendar.render();
    });
</script>