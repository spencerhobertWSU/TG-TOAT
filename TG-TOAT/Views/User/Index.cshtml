@model TGTOAT.Models.UserIndexViewModel

@{
    ViewData["Title"] = "Home";

    if (Model.UserRole == "Student")
    {
        Layout = "~/Views/Shared/_StudentLayout.cshtml";
    }
    else if (Model.UserRole == "Instructor")
    {
        Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    }
}

<h1>Welcome, @Model.FirstName @Model.LastName, @Model.UserRole</h1>

<div class="row">
    <!-- Cards column -->
    <div class="col-md-10 card-container">
        <!-- Print every class, if there is any -->
        @if (Model.Courses.Count != 0)
        {
            @foreach (var course in Model.Courses)
            {
                <div class="card">
                    <a class="class-link" asp-area="" asp-controller="Course" asp-action="Index" asp-route-id="@course.CourseId">
                        <img href="">
                        <div class="card-info">
                            <p class="class-info">@course.Department.DepartmentName @course.CourseNumber - @course.Semester @course.Year</p>
                            <p class="class-name">@course.CourseName</p>
                            <p class="class-time">@course.DaysOfTheWeek, @course.StartTime-@course.EndTime</p>
                        </div>
                    </a>
                    <div class="card-icons">
                        <a href="#" title="Announcements"><i class="fa-solid fa-bullhorn"></i></a>
                        <a href="#" title="Assignments"><i class="fa-light fa-books"></i></a>
                        <a href="#" title="Discussions"><i class="fa-light fa-comments"></i></a>
                        <a href="#" title="Grades"><i class="fa-solid fa-award"></i></a>
                    </div>
                </div>
            }
        }
        else
        {
            <div>
                <p>You currently have no classes!</p>
            </div>
        }
    </div>

    <!-- To-do list column -->
    <div class="col-md-2">
        <div class="todo">
            <h3>To Do</h3>
        </div>
        <div class="todo-items">
            @if (Model.UpcomingAssignments != null && Model.UpcomingAssignments.Any())
            {
                @foreach (var assignment in Model.UpcomingAssignments)
                {
                    @if (Model.UserRole == "Student")
                    {
                        <a asp-controller="Course" asp-action="SubmitAssignment" asp-route-assignmentId="@assignment.AssignmentId">
                            <p class="todo-class">@assignment.Course.Department.DepartmentName @assignment.Course.CourseNumber</p>
                            <p class="todo-name">@assignment.AssignmentName</p>
                            <p class="todo-time">@assignment.DueDateAndTime.ToString("MMM dd 'at' h:mmtt")</p>
                        </a>
                    }
                    else if (Model.UserRole == "Instructor")
                    {
                        <a asp-controller="Course" asp-action="ViewSubmissions" asp-route-assignmentId="@assignment.AssignmentId">
                            <p class="todo-class">@assignment.Course.Department.DepartmentName @assignment.Course.CourseNumber</p>
                            <p class="todo-name">@assignment.AssignmentName</p>
                            <p class="todo-time">@assignment.DueDateAndTime.ToString("MMM dd 'at' h:mmtt")</p>
                        </a>
                    }
                }
            }
            else
            {
                <p>No upcoming assignments!</p>
            }
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
