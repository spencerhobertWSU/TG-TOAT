@* @model IEnumerable<TGTOAT.Data.Courses> *@
@model TGTOAT.ViewModels.CourseListViewModel


@{
    ViewData["Title"] = "Courses";

    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

@{
    ViewData["Title"] = "Courses";
}

<h1>Course List</h1>
<a href="@Url.Action("Create", "Course")" class="btn btn-primary">Add New Course</a>

<table class="table">
    <thead>
        <tr>
            <th>Course Number</th>
            <th>Course Name</th>
            <th>Department</th>
            <th>Credits</th>
            <th>Location</th>
            <th>Room Number</th>
            <th>Days</th>
            <th>Start Time</th>
            <th>End Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Department.DepartmentName</td>
                <td>@course.CourseNumber</td>
                <td>@course.CourseName</td>
                <td>@course.NumberOfCredits</td>
                <td>@course.Campus</td>
                @{
                        if(course.RoomNumber == 0)
                        {
                        <td>Onl</td>
                        }
                        else
                        {
                        <td>@course.RoomNumber</td>
                        }
                }
                
                <td>@course.DaysOfTheWeek</td>
                @* <td>@course.StartTime</td>
                <td>@course.EndTime</td> *@
                <td>@course.StartTime?.ToString("hh:mm tt")</td>  <!-- Displaying time only -->
                <td>@course.EndTime?.ToString("hh:mm tt")</td>    <!-- Displaying time only -->

                <td>
                    <a href="@Url.Action("Edit", "Course", new { id = course.CourseId })" class="btn btn-primary">Edit</a>  <!-- Edit button -->
                    <a href="@Url.Action("Delete", "Course", new { id = course.CourseId })" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this course?');">Delete</a>                 <!-- Delete button-->

                </td>

            </tr>
        }
    </tbody>
</table>
